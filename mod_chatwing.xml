<?xml version="1.0" encoding="utf-8"?>
<extension type="module"
           version="3.1.0"
           client="site"
           method="upgrade">
	<name>ChatWing</name>
	<author>Tri Dung Pham</author>
	<version>0.0.1</version>
	<description>Module that displays a ChatWing chatbox</description>
	<files>
		<filename>mod_chatwing.xml</filename>
		<filename module="mod_chatwing">mod_chatwing.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>models</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic"
			          addfieldpath="/modules/mod_chatwing/models/fields">
				<field name="chatbox_key"
				       type="chatwingbox"
				       label="MOD_CHATWING_LABEL_CHATBOX_SELECT"/>
                <field name="width" type="text" label="MOD_CHATWING_LABEL_CHATBOX_WIDTH"/>
                <field name="height" type="text" label="MOD_CHATWING_LABEL_CHATBOX_HEIGHT"/>
			</fieldset>
		</fields>
	</config>
</extension>
